<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.ringling.backend.snap.repository.mybatis.SnapMapper">

    <insert id="save"
      parameterType="org.ringling.backend.snap.entity.Snap"
      useGeneratedKeys="true"
      keyProperty="id">
        INSERT INTO Snap (
            summary_id,
            user_id,
            created_at,
            updated_at
        ) VALUES (
            #{summaryId},
            #{userId},
            #{createdAt},
            #{updatedAt}
        )
    </insert>

    <update id="merge" parameterType="org.ringling.backend.snap.entity.Snap">
        UPDATE Snap
        <set>
            <if test="updatedAt != null">updated_at = #{updatedAt}</if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="findSnaps" resultType="org.ringling.backend.snap.entity.Snap">
        SELECT * FROM Snap
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>

            <if test="lastSnapId != null">
                AND id &lt; #{lastSnapId}
            </if>
        </where>
        ORDER BY id DESC
        LIMIT #{limit}
    </select>

    <select id="getSnapCounts" resultType="org.ringling.backend.snap.dto.SnapCountResponse">
        SELECT
            COUNT(*) as allCount,
            COUNT(CASE WHEN user_id = #{userId} THEN 1 END) as myCount
        FROM Snap
    </select>

    <select id="findById" resultType="org.ringling.backend.snap.entity.Snap" parameterType="int">
        SELECT * FROM Snap WHERE id = #{id}
    </select>

</mapper>
